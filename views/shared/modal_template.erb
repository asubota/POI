<script id="modal-template" type="text/template">
<div class="ui modal poi-modal">
<i class="close icon"></i>
<div class="content">

  <div class="ui form segment">
    <div class="field">
      <label>Title</label>
      <div class="ui left labeled icon input">
        <input type="text" placeholder="Title" class="pos-title" value="<%%= title %>">
        <i class="cloud icon"></i>
      </div>
    </div>

    <div class="field">
      <label>Description</label>
      <div class="ui left labeled icon input">
        <input type="text" placeholder="Description" class="pos-description" value="<%%= description %>">
        <i class="info icon"></i>
      </div>
    </div>

    <div class="two fields">
      <div class="field">
        <label>Latitude</label>
        <div class="ui left labeled icon input">
          <input type="text" placeholder="Latitude" class="pos-lat" value="<%%= lat %>">
          <i class="map marker icon"></i>
        </div>
      </div>
      <div class="field">
        <label>Longitude</label>
        <div class="ui left labeled icon input">
          <input type="text" placeholder="Longitude" class="pos-lng" value="<%%= lng %>">
          <i class="map marker icon"></i>
        </div>
      </div>
    </div>

    <div class="field">
      <label>Photo</label>
      <div class="ui left labeled icon input">
        <input type="file">
        <i class="photo icon"></i>
      </div>
    </div>
  </div>

</div>
<div class="actions">
  <div class="ui button mini negative">Cancel</div>
  <div class="ui button mini positive poi-save">Save</div>
</div>
</div>
</script>
